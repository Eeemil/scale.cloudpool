    "cloudApiSettings": {
        "apiAccess": {
            "subscriptionId": "12345678-9abc-def0-1234-56789abcdef0",
            "auth": {
                "clientId": "12345678-9abc-def0-1234-56789abcdef0",
                "domain": "12345678-9abc-def0-1234-56789abcdef0",
                "secret": "12345678-9abc-def0-1234-56789abcdef0",
