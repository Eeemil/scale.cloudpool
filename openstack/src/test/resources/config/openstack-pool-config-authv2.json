{
    "cloudPool": {
      "name": "my-scaling-pool",
      "driverConfig": {
        "auth": {  
          "keystoneUrl": "http://nova.host.com:5000/v2.0",  
          "v2Credentials": {
            "tenantName": "tenant",
            "userName": "clouduser",
            "password": "cloudpass"
          }
        },    
        "region": "RegionTwo", 
        "networks": ["private-net"],
        "assignFloatingIp": false
      }
    },
    "scaleOutConfig": {
      "size": "m1.small", 
      "image": "Ubuntu Server 12.04",
      "keyPair": "openstack_p11",
      "securityGroups": ["web"],               
      "bootScript": [
        "#!/bin/bash",      
        "sudo apt-get update",
        "sudo apt-get install -y --force-yes apache2"
      ]
    },
    "scaleInConfig": {
      "victimSelectionPolicy": "CLOSEST_TO_INSTANCE_HOUR",
      "instanceHourMargin": 0
    }
}  
